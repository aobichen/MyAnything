
@model IEnumerable<Anything.ViewModels.HotelListModel>

<div class="col-md-12 col-sm-12 col-xs-12">
    @if (Model == null || Model.Count() <= 0)
    {
        <p class="col-md-12">
            <a class="btn btn-success" href="@Url.Action("Edit", "Hotel")">
                <i class="glyphicon glyphicon-plus-sign" aria-hidden="true"></i>
                新增
            </a>
        </p>

    }
    <div class="x_panel">
        <div class="x_title">
            <h2>
                紅利設定

                @if (TempData["SuccessMessage"] != null)
                {
                    <small class="text-warning">
                        @TempData["SuccessMessage"]
                    </small>
                }
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <tr>

                        <th>
                            名稱
                        </th>
                        <th>
                            地區
                        </th>
                        <th>
                            房間數量
                        </th>

                        <th>
                            服務中
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @item.Qty
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.Enabled)
                            </td>

                            <td>
                                <div class="btn-group">

                                    <a class="btn btn-primary" href="@Url.Action("Edit", "Hotel", new { id = item.ID })">
                                        <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-danger" target="_blank" href="@Url.Action("Index", "Room", new { id = item.ID })">
                                        <i class="fa fa-bed" aria-hidden="true"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }

                </table>
            </div>
            </div>
    </div>
</div>








