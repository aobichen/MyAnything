@using PagedList.Mvc;
@model PagedList.IPagedList<Anything.Areas.My.Models.HotelOrderModel>
<div class="row">
    

    <div class="clearfix"></div>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Table design <small>Custom design</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                   
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">

              

                <div class="table-responsive">
                    @if (Model != null){
                                            
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr>
                                    <th>
                                        訂購日期
                                    </th>
                                    <th>
                                        訂單編號
                                    </th>
                                    <th>
                                        訂購人
                                    </th>
                                    <th>
                                        連絡電話
                                    </th>
                                    <th>
                                        房型
                                    </th>
                                    <th>
                                        入住日期
                                    </th>
                                    <th>
                                        退房日期
                                    </th>

                                    <th>
                                        付款方式
                                    </th>
                                    <th>
                                        付款狀態
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Created.ToString("yyyy-MM-dd HH:mm")
                                        </td>
                                        <td>
                                            @item.MerchantOrderNo
                                        </td>
                                        <td>
                                            @item.OrderName
                                        </td>
                                        <td>
                                            @item.OrderTel
                                        </td>
                                        <td>
                                            @item.RoomName
                                        </td>
                                        <td>
                                            @item.CheckInDate.ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @item.CheckOutDate.ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @item.PaymentType
                                        </td>
                                        <td>
                                            @item.PayStatus
                                        </td>
                                    </tr>
                                }
                            </tbody>
                           
                        </table>
                        <div class="col-md-12">
                            @if (Model != null && Model.Count > 0)
                            {
                                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
                            }
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>

    
</div>
