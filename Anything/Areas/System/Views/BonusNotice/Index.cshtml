@model Anything.Areas.System.Models.BonusNoticeViewModel
@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/Scripts/tinymce/tinymce.min.js")
<script type="text/javascript">
    tinymce.init({ selector: '#ItemDescription', height: "100%" });
</script>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="col-md-3 text-info">
            {{姓名}}
        </div>
        <div class="col-md-3 text-info">
            {{當月份}}
        </div>
        <div class="col-md-3 text-info">
            {{使用月份}}
        </div>
        <!--
        <div class="col-md-3 text-info">
            {{消費紅利}}
        </div>
        <div class="col-md-3 text-info">
            {{回饋紅利}}
        </div>
        <div class="col-md-3 text-info">
            {{總紅利}}
        </div>-->
        <div class="col-md-3">
            {{紅利入帳需消費金額}}
        </div>
        <!--
        <div class="col-md-3 text-info">
            {{注意事項}}
        </div>
        <div class="col-md-3 text-info">
            {{備註}}
        </div>
        <div class="col-md-3 text-info">
            {{連結}}
        </div>
        -->
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        25日通知內容

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <small class="text-warning">
                                @TempData["SuccessMessage"]
                            </small>
                        }
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>


                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    @using (Html.BeginForm("Edit","BonusNotice"))
                    {
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-horizontal form-label-left">
                            @Html.AntiForgeryToken()

                            <div class="form-group">

                                <div class="col-md-12 col-sm-12 col-xs-12">

                                    @Html.TextAreaFor(model => model.ItemDescription, new { htmlAttributes = new { @class = "form-control infomation", @id = "Information" } })


                                </div>
                            </div>




                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                                    <button type="submit" class="btn btn-success">確定</button>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

