@model Anything.Areas.System.Models.RoomTypeViewModel

@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    房型

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <small class="text-warning">
                            @TempData["SuccessMessage"]
                        </small>
                    }
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>


                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-horizontal form-label-left">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ID)
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                房型
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.ItemCode, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })

                                </div>


                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                描述<span class="required"></span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.ItemDescription, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })

                                </div>

                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                                <button type="submit" class="btn btn-success">確定</button>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>





