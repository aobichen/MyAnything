<script type="text/javascript">
    jQuery(function () {
        $('#image-gallery').lightSlider({
            gallery: true,
            item: 1,
            thumbItem: @Model.Images.Count,
            slideMargin: 0,
            speed: 500,
            auto: true,
            loop: true,
            onSliderLoad: function () {
                $('#image-gallery').removeClass('cS-hidden');
            }
        });

        $('#gallery1,#gallery2,#gallery3,#gallery4').lightGallery({
            download: false
        });
    })
</script>