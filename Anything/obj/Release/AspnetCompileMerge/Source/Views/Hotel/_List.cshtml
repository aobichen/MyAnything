
@model IEnumerable<Anything.ViewModels.HotelListModel>

<nav class="breadcrumbs">
    @if (Model == null || Model.Count() <= 0)
    {
        <p class="full-width">
            <a class="btn btn-success" href="@Url.Action("Edit", "Hotel")">
                <i class="glyphicon glyphicon-plus-sign" aria-hidden="true"></i>
                新增
            </a>
        </p>

    }
</nav>


<p class="full-width">
    <a class="btn btn-default disabled" href="javascript:void(0)">
        <i class="glyphicon glyphicon-ban-circle" aria-hidden="true"></i>
        新增
    </a>
</p>
<table class="table table-bordered table-condensed table-hover table-striped alert-success">
    <tr>
        
        <th>
            名稱
        </th>
        <th>
            地區
        </th>
        <th>
            房間數量
        </th>
       
        <th>
            服務中
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @item.Qty
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Enabled)
            </td>
           
            <td>
                <div class="btn-group">

                    <a class="btn btn-primary" href="@Url.Action("Edit", "Hotel", new { id = item.ID })">
                        <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-danger" target="_blank" href="@Url.Action("Index", "Room", new { id = item.ID })">
                        <i class="fa fa-bed" aria-hidden="true"></i>
                    </a>
                </div>
              
            </td>
        </tr>
    }

</table>
