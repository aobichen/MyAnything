@model IEnumerable<Anything.Models.Room>

<p>
    @Html.ActionLink("Create New", "Create", new { id = (int)ViewBag.HotelId }, new { @class="btn btn-primary" })
</p>
<div class="full-width">
    <table class="table">
        <tr>

            <th>
                房型
            </th>
            <th>
                定價
            </th>
            <th>
                平日房價
            </th>
            <th>
                假日房價
            </th>
           
            <th>
                數量
            </th>

            <th>
                服務中
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.FixedPrice
                </td>
                <td>
                    @item.DayPrice
                </td>
                <td>
                    @item.HolidayPrice
                </td>
              
                <td>
                    @item.Quantity
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.ID }) 
                   @Html.ActionLink("設定價格", "SetPrice", new { id = item.ID }) 
                </td>
            </tr>
    }

    </table>
</div>