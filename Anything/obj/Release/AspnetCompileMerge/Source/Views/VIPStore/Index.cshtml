@model Anything.ViewModels.VIPModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SysManage</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       <div class="panel panel-primary">
           <div class="panel-heading">
               <div class="panel-title">
                   VIP
               </div>
           </div>
           <div class="panel-body">
              
               <div class="col-md-12 alert alert-danger" style="right:0;text-align:right;font-size:18px;padding-top:2px;padding-right:2px;padding-left:2px;">
                   <div class="col-md-12 alert label-primary" style="text-align:center;font-size:14px;margin-top:1px;">
                       <h4 style="color:#fff;">
                           @Model.VIPDescription
                       </h4>
                   </div>
                   <label style="color:#ff6633"><span>募集優惠中</span>  @Model.SaleDays <span>天只要 NT.</span> @Model.VIPSalePrice</label>
               </div>
           </div>
           <div class="panel-footer">
              
                   <a class="btn btn-primary" href="@Url.Action("Order")">
                       購買
                   </a>
               
           </div>
       </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
