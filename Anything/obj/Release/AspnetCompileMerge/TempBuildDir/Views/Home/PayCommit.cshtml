@model Anything.ViewModels.BookingCommit
@{
    ViewBag.Title = "PayCommit";
}




    <div class="wrap">
        <div class="full-width">
            <nav class="breadcrumbs">

            </nav>
            <div class="row">
                <div class="static-content booking">
                    <!--//breadcrumbs-->
                    <div class="full-width">
                        @*<form id="booking" method="post" action="booking" class="static-content booking">*@
                        <fieldset>
                            <h2>訂單確認</h2>
                            
                            <div class="text-wrap">
                                <div class="output">
                                    <p>訂單編號:</p>
                                    <p>@Model.PayGoRequest.MerchantOrderNo</p>
                                    <p>訂購人姓名: </p>
                                    <p>@Model.Booking.info.Name</p>
                                  
                                    <p>E-mail: </p>
                                    <p>@Model.Booking.info.Email</p>
                                    <p>地址:</p>
                                    <p>@Model.Booking.info.Address</p>
                                    <p>連絡電話: </p>
                                    <p>@Model.Booking.info.Phone</p>
                                    <p>入住日期: </p>
                                    <p>@Model.Booking.CheckInDate</p>
                                    <p>退房日期:</p>
                                    <p>@Model.Booking.CheckOutDate</p>
                                    <p>金額:</p>
                                    <p>@Model.PayGoRequest.Amt</p>
                                  
                                    <p>飯店:</p>
                                    <p>@Anything.Helper.Helpers.Room.GetHotelForID(Model.Booking.ID)</p>
                                    <p>房型:</p>
                                    <p>@Anything.Helper.Helpers.Room.GetRoomForID(Model.Booking.ID)</p>
                                    <p>款方式:</p>
                                    <p>
                                    @{
                                        switch (Model.Booking.PaymentType)
                                        {
                                            case 1:
                                                <span>信用卡一次付清</span>
                                                break;
                                            case 2:
                                            <span>信用卡分期/六期</span>
                                                break;
                                            case 3:
                                            <span>網路ATM</span>
                                                break;
                                            case 4:
                                            <span>實體ATM</span>
                                                break;
                                            case 5:
                                            <span>超商付款</span>
                                                break;
                                        }
}
                                    </p>
                                </div>
                            </div>
                            <div class="row">
            <form name='Pay2go' method='post'action='https://capi.pay2go.com/MPG/mpg_gateway' class="static-content booking">

                                        <input type="hidden" name="MerchantID" value="@Model.PayGoRequest.MerchantID" />
                                        <input type="hidden" name="Amt" value="@Model.PayGoRequest.Amt" />
                                        <input type="hidden" name="BARCODE" value="@Model.PayGoRequest.BARCODE" />
                                        <input type="hidden" name="CheckValue" value="@Model.PayGoRequest.CheckValue" />
                                        <input type="hidden" name="ClientBackUrl" value="@Model.PayGoRequest.ClientBackUrl" />
                                        <input type="hidden" name="CREDIT" value="@Model.PayGoRequest.CREDIT" />
                                        <input type="hidden" name="CreditRed" value="@Model.PayGoRequest.CreditRed" />
                                        <input type="hidden" name="CUSTOMER" value="@Model.PayGoRequest.CUSTOMER" />
                                        <input type="hidden" name="CustomerURL" value="@Model.PayGoRequest.CustomerURL" />
                                        <input type="hidden" name="CVS" value="@Model.PayGoRequest.CVS" />
                                        <input type="hidden" name="EmailModify" value="@Model.PayGoRequest.EmailModify" />
                                        <input type="hidden" name="ExpireDate" value="@Model.PayGoRequest.ExpireDate" />
                                        <input type="hidden" name="ExpireTime" value="@Model.PayGoRequest.ExpireTime" />
                                        <input type="hidden" name="InstFlag" value="@Model.PayGoRequest.InstFlag" />
                                        <input type="hidden" name="ItemDesc" value="@Model.PayGoRequest.ItemDesc" />
                                        <input type="hidden" name="LangType" value="@Model.PayGoRequest.LangType" />
                                        <input type="hidden" name="LoginType" value="@Model.PayGoRequest.LoginType" />
                                        <input type="hidden" name="MerchantOrderNo" value="@Model.PayGoRequest.MerchantOrderNo" />
                                        <input type="hidden" name="NotifyURL" value="@Model.PayGoRequest.NotifyURL" />
                                        <input type="hidden" name="OrderComment" value="@Model.PayGoRequest.OrderComment" />
                                        <input type="hidden" name="RespondType" value="@Model.PayGoRequest.RespondType" />
                                        <input type="hidden" name="ReturnURL" value="@Model.PayGoRequest.ReturnURL" />
                                        <input type="hidden" name="TimeStamp" value="@Model.PayGoRequest.TimeStamp" />
                                        <input type="hidden" name="TradeLimit" value="@Model.PayGoRequest.TradeLimit" />
                                        <input type="hidden" name="UNIONPAY" value="@Model.PayGoRequest.UNIONPAY" />
                                        <input type="hidden" name="VACC" value="@Model.PayGoRequest.VACC" />
                                        <input type="hidden" name="Version" value="@Model.PayGoRequest.Version" />
                                        <input type="hidden" name="WEBATM" value="@Model.PayGoRequest.WEBATM" />
                                        <input type="hidden" name="RespondType" value="@Model.PayGoRequest.RespondType" />

                                        <div class="f-item full-width">
                                            <input type="submit" class="gradient-button" value="付款" id="next-step" />
                                        </div>

                                    </form>
</div>
                           
                        </fieldset>
                        @*</form>*@
                    </div>
                    </div>
</div>
            
        </div>

    </div>

