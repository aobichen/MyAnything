<script type="text/javascript">
                jQuery(function () {
                    //$('.collapse').collapse();
                    $('.dropdown-toggle').on('show.bs.dropdown', function () {
                        $(this).children('.dropdown-menu').fadeIn(500);
                    });

                    $('.dropdown-toggle').on('hide.bs.dropdown', function () {
                        $(this).children('.dropdown-menu').fadeOut(500);
                    });

                  //  $('.carousel').carousel({ interval: 6000 });
                    $('[data-toggle="tooltip"]').tooltip();
                    $('.chk-options').on("change", function () {
                        var self = $(this);

                        var checks = $('.chk-options:checked');
                        var checkedValue = [];
                        for (var i = 0, max = checks.length; i < max; i++) {
                            checkedValue.push($(checks[i]).val());
                        }

                        if (checkedValue.length <= 0) {
                            $('.hotel-item').show();
                            return;
                        }

                        var checked = self.prop('checked');

                        var value = self.val();
                        var hotels = $('.hotel-item');
                        for (var i = 0, max = hotels.length; i < max; i++) {
                            var hotel = $(hotels[i]);
                            var options = hotel.attr('data-options');
                            if (options != "") {
                                var arr = options.split(',');
                                var show = hasArray(arr, checkedValue);
                                if (show) {
                                    hotel.show();
                                } else {
                                    hotel.hide();
                                }
                            }

                        }

                    });
                    //hotel - item

                    var hasArray = function (arr1, arr2) {
                        var arr = [];
                        for (var i = 0, max = arr1.length; i < max; i++) {
                            for (var k = 0, max2 = arr2.length; k < max2; k++) {
                                if (arr1[i] == arr2[k]) {
                                    arr.push(true);
                                }
                            }
                        }
                        return arr.length == arr2.length;
                    }

