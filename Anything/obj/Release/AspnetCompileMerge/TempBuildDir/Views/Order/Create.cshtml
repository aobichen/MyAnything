@model Anything.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Create";
}

<h2></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RoomId)
    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.Amount)
    @Html.HiddenFor(model => model.Key)
    @Html.HiddenFor(model => model.CheckIn)
    @Html.HiddenFor(model => model.CheckOut)
    
    <div class="col-md-10 col-center">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    訂單資訊
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-responsive alert-info">
                    <tbody>
                        <tr>
                            <td>
                                入住日
                            </td>
                            <td>
                                @Model.CheckIn.ToShortDateString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                退房日
                            </td>
                            <td>
                                @Model.CheckOut.ToShortDateString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                民宿
                            </td>
                            <td>
                                @Model.HotelName
                            </td>
                        </tr>
                        <tr>
                            <td>
                                房型
                            </td>
                            <td>
                                @Model.RoomName
                            </td>
                        </tr>
                        <tr>
                            <td>
                                價格
                            </td>
                            <td>
                                @Model.Price
                            </td>
                        </tr>
                        <tr>
                            <td>
                                數量
                            </td>
                            <td>
                                @Model.Amount
                            </td>
                        </tr>
                        <tr>
                            <td>
                                總金額
                            </td>
                            <td>
                                @Model.Total
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-heading">訂購人資料</div>
                </div>
                <div class="panel-body">

                    <div class="form-group">

                        <label class="control-label col-md-2 col-sm-2">姓名</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2">連絡電話</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2">手機號碼</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2">地址</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="form-group">
                        <div class="col-md-offset-10 col-md-10">
                            <input type="submit" value="前往結帳" class="btn btn-danger btn-lg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
}

