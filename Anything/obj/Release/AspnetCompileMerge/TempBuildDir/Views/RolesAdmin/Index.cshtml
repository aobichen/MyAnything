@model IEnumerable<Anything.Models.Role>

@{
    ViewBag.Title = "Create";
}

    <div class="container" style="margin-top:3px;">
      
        <div class="panel panel-default">
            <div class="col-md-12 col-right">
                <h4> @Html.ActionLink("新增", "Create")</h4>
            </div>
            <div class="panel-body">
                
                <table class="table table-striped table-condensed table-bordered table-hover alert-info">
                    <thead>
                        <tr>
                            <th>
                                名稱
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>

                                    @Html.ActionLink("編輯", "Edit", new { id = item.Id })


                                    @Html.ActionLink("內容", "Details", new { id = item.Id })

                                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        
    </div>

