@model Anything.Models.ResetPasswordViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>密碼變更
                    @if (TempData["SuccessMessage"] != null)
                    {
                    <small class="text-warning">
                        @TempData["SuccessMessage"]
                    </small>
                    }
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    
                  
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
@using (Html.BeginForm("ResetPassword", "Account", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal form-label-left", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
   
     @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Email <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                            新密碼 <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                        確認新密碼<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.ReturnUrl, new { @Value = ViewBag.ReturnUrl })

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                          
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

               
}
            </div>
        </div>
    </div>
</div>
