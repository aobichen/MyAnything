@model IEnumerable<Anything.Models.AdOrder>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model != null) { 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BeginDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        @if (User.IsInRole("Admin") || User.IsInRole("AdManager")) { 
            <th>
               Email
            </th>
           }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.BeginDate.ToShortDateString()
        </td>
        <td>
            @item.EndDate.ToShortDateString()
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        @if (User.IsInRole("Admin") || User.IsInRole("AdManager")) { 
            <td>
                @Anything.Helper.Helpers.Member.Email(item.Creator.Value)
            </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
}
else
{
    <div class="alert alert-danger">
        歡迎光臨
        @Url.Action("Index")
    </div>
}
