
@model IEnumerable<Anything.Models.Hotel>


@if (Model==null || Model.Count() <= 0) { 
<p>
    @Html.ActionLink("新增", "Edit", "Hotel",null, new {@class="btn btn-primary" })
</p>
}
<table class="table table-bordered table-condensed table-hover table-striped alert-success">
    <tr>
        
        <th>
            名稱
        </th>
        <th>
            地區
        </th>
        <th>
            房間數量
        </th>
       
        <th>
            服務中
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @item.Room.Count()
            </td>
            <td>
                @Html.EditorFor(modelItem => item.SaleOff)
            </td>
           
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.ID }) |
                @Html.ActionLink("新增房型", "Index", "Room", new { id = item.ID }, null)
                
            </td>
        </tr>
    }

</table>
